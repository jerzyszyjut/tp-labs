<Window x:Class="lab11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab11"
        mc:Ignorable="d"
        Title="MainWindow" Height="250" Width="400">
    <StackPanel Orientation="Vertical">
        <Grid>
            <StackPanel>
                <TextBox x:Name="FibonacciNumberInput" VerticalContentAlignment="Center"/>
                <Button Click="FibonacciButton_Click">Calculate Fibonacci with progress bar</Button>
                <ProgressBar Margin="10" x:Name="FibonacciProgressBar" Width="300" Height="10" Value="0"></ProgressBar>
                <Label>Result:</Label>
                <TextBox x:Name="FibonacciNumberOutput" IsReadOnly="True"/>
                <Button Click="Zip_Click" VerticalContentAlignment="Center">Zip</Button>
                <Button Click="Unzip_Click" VerticalContentAlignment="Center">Unzip</Button>
            </StackPanel>
        </Grid>
    </StackPanel>
</Window>
